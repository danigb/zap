<%= simple_form_for([@source, @comment]) do |form| %>
  <div class="inputs">
    <%= form.hidden_field :resource_id %><%= form.hidden_field :resource_type %>
    <div class="input"><%= property @comment, :resource, @comment.resource.name %></div>
    <% if @comment.new_record? %>
      <%= form.association :user %>
    <% else %>
      <div class="input"><%= property @comment, :user, @comment.user.name %></div>
    <% end %>

    <%= form.text_area :body %>
  </div>
  <div class="controls">
    <%= form.submit %><%= cancel_submit @source %>
  </div>
<% end %>